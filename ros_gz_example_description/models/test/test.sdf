<?xml version="1.0" ?>
<sdf version="1.8">
    <world name="test_world">
        <!-- Physics setup -->
        <physics name="default_physics" type="ode">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1.0</real_time_factor>
        </physics>

        <!-- Lighting settings -->
        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <attenuation>
                <range>1000</range>
                <constant>0.9</constant>
                <linear>0.01</linear>
                <quadratic>0.001</quadratic>
            </attenuation>
            <direction>-0.5 0.1 -0.9</direction>
        </light>

        <!-- Ground plane definition -->
        <model name="ground_plane">
            <static>true</static>
            <link name="link">
                <collision name="collision">
                    <geometry>
                        <plane>
                            <normal>0 0 1</normal>
                            <size>100 100</size>
                        </plane>
                    </geometry>
                </collision>
                <visual name="visual">
                    <geometry>
                        <plane>
                            <normal>0 0 1</normal>
                            <size>100 100</size>
                        </plane>
                    </geometry>
                    <material>
                        <ambient>0.7 0.7 0.7 1</ambient>
                        <diffuse>0.8 0.8 0.8 1</diffuse>
                        <specular>0.1 0.1 0.1 1</specular>
                    </material>
                </visual>
            </link>
        </model>

        <!-- Robot leg model -->
        <model name="robot_leg">
            <pose>0 0 0.2 0 0 0</pose> <!-- Positioning the entire model -->

            <link name="upper_leg">
                <pose>0 0 0.2 0 0 0</pose> <!-- Positioning the upper leg -->
                <visual name="upper_leg_visual">
                    <geometry>
                        <mesh>
                            <uri>file:///home/ws/ros_gz_example_description/models/neptr/meshes/thigh.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.7 0.7 0.7 1</ambient>
                        <diffuse>0.7 0.7 0.7 1</diffuse>
                        <specular>0.1 0.1 0.1 1</specular>
                    </material>
                </visual>
                <collision name="upper_leg_collision">
                    <geometry>
                        <cylinder>
                            <radius>0.05</radius>
                            <length>0.4</length>
                        </cylinder>
                    </geometry>
                </collision>
                <inertial>
                    <mass>1.0</mass>
                    <inertia>
                        <ixx>0.01</ixx>
                        <ixy>0.0</ixy>
                        <ixz>0.0</ixz>
                        <iyy>0.01</iyy>
                        <iyz>0.0</iyz>
                        <izz>0.01</izz>
                    </inertia>
                </inertial>
            </link>

            <link name="lower_leg">
                <pose>0 0 -0.2 0 0 0</pose> <!-- Positioning the lower leg relative to the upper leg -->
                <visual name="lower_leg_visual">
                    <geometry>
                        <mesh>
                            <uri>file:///home/ws/ros_gz_example_description/models/neptr/meshes/foot_link.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <ambient>0.7 0.7 0.7 1</ambient>
                        <diffuse>0.7 0.7 0.7 1</diffuse>
                        <specular>0.1 0.1 0.1 1</specular>
                    </material>
                </visual>
                <collision name="lower_leg_collision">
                    <geometry>
                        <cylinder>
                            <radius>0.05</radius>
                            <length>0.4</length>
                        </cylinder>
                    </geometry>
                </collision>
                <inertial>
                    <mass>1.0</mass>
                    <inertia>
                        <ixx>0.01</ixx>
                        <ixy>0.0</ixy>
                        <ixz>0.0</ixz>
                        <iyy>0.01</iyy>
                        <iyz>0.0</iyz>
                        <izz>0.01</izz>
                    </inertia>
                </inertial>
            </link>

            <joint name="knee_joint" type="revolute">
                <pose>0 0 0 0 0 0</pose> <!-- Positioning the joint -->
                <parent>upper_leg</parent>
                <child>lower_leg</child>
                <axis>
                    <xyz>0 1 0</xyz>
                    <limit>
                        <lower>-1.57</lower>
                        <upper>1.57</upper>
                    </limit>
                </axis>
            </joint>
        </model>
    </world>
</sdf>